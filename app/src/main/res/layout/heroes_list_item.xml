<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView android:id="@+id/heroListImageView"
               android:layout_width="match_parent"
               android:layout_height="@dimen/card_item"
               android:background="@color/colorPrimary"
               android:contentDescription="@string/app_name"
               android:scaleType="centerCrop"/>

    <TextView android:id="@+id/heroListNameView"
              style="@style/TextAppearance.Title.ListItem"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignParentRight="true"
              android:layout_alignTop="@+id/heroListImageView"
    />

</RelativeLayout>
